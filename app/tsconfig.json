{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@sdk/*": ["../sdk/src/*"],
      "@coral-xyz/anchor": ["./node_modules/@coral-xyz/anchor"],
      "@coral-xyz/anchor/*": ["./node_modules/@coral-xyz/anchor/*"],
      "@solana/web3.js": ["./node_modules/@solana/web3.js"],
      "@solana/web3.js/*": ["./node_modules/@solana/web3.js/*"],
      "@solana/spl-token": ["./node_modules/@solana/spl-token"],
      "@solana/spl-token/*": ["./node_modules/@solana/spl-token/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
